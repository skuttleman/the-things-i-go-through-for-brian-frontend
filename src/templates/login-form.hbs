<form action="/" method="post">
  <label for="username">Username:</label>
  <input type="text" name="username" id="username" value="" />
  <label for="username">Password:</label>
  <input type="password" name="password" id="password" value="" />
  <button type="button" class="post-button" onclick="{{postMethod}}(event);">{{postText}}</button>
  <button type="button" class="cancel-button" onclick="cancel(event);">Cancel</button>
  <button type="button" class="switch-button" onclick="{{switchMethod}}(event);">{{switchText}}</button>
</form>
